                            <TextView
                                android:id="@+id/windDirectionDay3TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="48dp"
                                android:text=" message += Temperature :  + 35 + \nPressure : +50+\nHumidity : +25%+"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.494"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/centerImageView3"
                                app:layout_constraintVertical_bias="0.859" />

                        </android.support.constraint.ConstraintLayout>

                    </android.support.v7.widget.CardView>
                    <!-- Add more CardViews here -->

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <TextView
            android:id="@+id/placeDescriptionTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Name: Atulya Shitole\n Student ID: S1932963"
            android:textSize="15sp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.859"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>