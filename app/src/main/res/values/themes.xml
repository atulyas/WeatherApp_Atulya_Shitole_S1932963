<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for Place Name TextView -->
    <style name="PlaceNameTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item> <!-- Black color for text -->
        <!-- Add any other styling attributes here -->
    </style>

    <!-- Style for Place Description TextView -->
    <style name="PlaceDescriptionTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item> <!-- Light gray color for text -->
        <!-- Add any other styling attributes here -->
    </style>

    <!-- Style for Weather Detail TextView -->
    <style name="WeatherDetailTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item> <!-- Black color for text -->
        <!-- Add any other styling attributes here -->
    </style>

    <!-- Style for Weather Day TextView -->
    <style name="WeatherDayTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item> <!-- Black color for text -->
        <!-- Add any other styling attributes here -->
    </style>

</resources>